{% extends 'layouts/homelayout.html.twig' %}
{% block content %}
    <div class="content">
        {% if editmode %}
            {{ pimcore_multiselect('pages', {
                'width': 200,
                'height': 100,
                'store': [
                    ['leave', 'Leave'],
                    ['home', 'Home'],
                ]
            }) }}
        {% else %}
            <p>{{ 'This page is linked to' | trans }}
                {% for pagesKey in pimcore_multiselect('pages').getData %}
                    <span>
            {{ pagesKey | trans }}
        </span>
                {% endfor %}
                categories
            </p>
        {% endif %}
        <div class="task">
            {% if editmode %}
                {{ pimcore_table("Task", {
                    "width": 700,
                    "height": 1800,
                    "defaults": {
                        "cols": 3,
                        "rows": 4,
                    }
                }) }}
            {% else %}
                {% set data = pimcore_table("Task").getData() %}
                {% if data is not empty %}
                    <table>
                        <tbody>
                        {% for row in data %}
                            <tr>
                                <th>{{ row[0] }}</th>
                                <td>{{ row[0] }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>No data available.</p>
                {% endif %}
            {% endif %}
        </div>
        {#<div>
            <h1>This Month Salary</h1>
            {% for classification in salary %}
                <li>{{ classification.getName() }}</li>
                <ul>
                    {% for key in classification.getKeys() %}
                        <li>
                            <strong>{{ key.getKey() }}:</strong> {{ key.getValue() }}
                        </li>
                    {% endfor %}
                </ul>
            {% endfor %}
        </div>#}
    </div>
    <div class="e-date">
        {{ pimcore_snippet('footerSnippet') }}
    </div>
{% endblock %}